{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "Hangfire": "Information",
        "Microsoft.EntityFrameworkCore.Database.Command": "Warning",
        "System": "Warning",
        "Microsoft.Hosting.Lifetime": "Verbose"
      }
    },
    "Enrich": [ "FromLogContext", "WithHangfireContext" ],
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "logs/log.txt",
                "rollingInterval": "Day",
                "retainedFileCountLimit": 14,
                "buffered": true,
                "flushToDiskInterval": 5
              }
            }
          ]
        }
      },
      {
        "Name": "Hangfire"
      }
    ]
  },
  "AllowedHosts": "*"
}
